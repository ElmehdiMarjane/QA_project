@model IEnumerable<Front.Models.Dtos.QuestionDto>


<div class="container p-6 border">
    <div class="row pb-2">
        
        
        <div class="col">
            <h1 class="text-info"></h1>
        </div>
        <div class="col text-end pt-1">

            <a asp-action="Create" value="Add Question"  class="btn btn-outline-info"><i class="fa fa-plus"></i></a>


        </div>

        <table class="table table-dark">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Points</th>
                    <th>Your Answer</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.QuestionText</td>
                    <td>@item.Category</td>
                    <td>@item.Points</td>
                    <td><input type="text" placeholder="Answer"/></td>
                </tr>
                }

            </tbody>
        </table>
        
        
    </div>
    
</div>